modules = ["dart-3.8"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["unzip", "flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web Server"

[[workflows.workflow]]
name = "Flutter Web Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter run -d web-server --web-hostname 0.0.0.0 --web-port 5000 --dart-define=OPENAI_API_KEY=${OPENAI_API_KEY:-}"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 37135
externalPort = 3001

[[ports]]
localPort = 39451
externalPort = 3000

[[ports]]
localPort = 41183
externalPort = 80

[deployment]
deploymentTarget = "static"
build = ["bash", "-c", "flutter build web --release --dart-define=OPENAI_API_KEY=${OPENAI_API_KEY:-}"]
publicDir = "build/web"
